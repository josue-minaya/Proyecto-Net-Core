
@{
    ViewData["Title"] = " Busqueda de producto";
}
@Html.ValidationSummary()
<div>
    <form asp-action="DetalleProducto" method="GET" class="formulario">        
    <h2>Busqueda de Productos</h2>
        <div class="form-group ">
            <label for="codigo">Codigo de producto</label>
            <input type="text" class="form-control" id="codigo"  name="Id">
        </div>
        <br>
        
        <div class="form-group text-center">
            <button type="submit" class="btn btn-primary" style="width:170px " name="IngresarProducto">Buscar</button>
        </div>
        <div class="form-group text-center">
            <a href="~/Vendedor/Vendedor"type="submit" class="btn btn-secondary" style="width:170px " name="IngresarProducto">Regresar</a>
        </div>
    </form>
    
    
</div>