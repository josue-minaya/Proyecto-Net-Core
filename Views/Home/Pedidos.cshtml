@model Producto
@{
    ViewData["Title"] = "Pedidos";
}
@Html.ValidationSummary()
<form class="formulario">
  <h5 class="text-left">Pedidos</h5>
  <table class="table table-striped text-center">
     <thead>
        <tr>
          <th scope="col"class>#</th>
          <th scope="col"class>Cod</th>
          <th scope="col"class>Precio</th>
          <th scope="col"class>Cantidad</th>
       </tr>
    </thead>
    
      <tbody>
          <tr>
            <td></td>
            <td>@Model.ProductoId</td>
            <td>@Model.precio</td>
            <td>@Model.stock</td>
          </tr>
      </tbody>
    
  </table>
  <div >
        <br>
        <button class="btn btn-success text-center"  type="submit" name="Enviar">Enviar</button>
    </div>
</form>