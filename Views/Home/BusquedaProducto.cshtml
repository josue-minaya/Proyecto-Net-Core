@{
    ViewData["Title"] = "Busqueda de productos";
}
@Html.ValidationSummary()
<div>
    <h1>Busqueda de Productos</h1>
    
        <div class="form-group formulario">
            <label for="codigo">Codigo de producto</label>
            <input type="text" class="form-control" id="codigo"  name="ProductoId">
        </div>
        <br>
        
        <div class="form-group text-center">
            <button class="btn btn-secondary" style="width:170px " name="IngresarProducto">Buscar</button>
        </div>
        
    <form class="formulario" action="buscarProducto" method="POST">
        
        <div class="form-group">
            <label for="foto" >Datos del producto</label>
            <div>
                <table class="table table-hover">
                    <thead>
                        <tr>
                             <th scope="col"class>Especificaciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td scope="row"></td>
                        </tr>
                    </tbody>
                    <thead>
                        <tr>
                             <th scope="col"class>Precio</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td scope="row"></td>
                        </tr>
                    </tbody>
                    <thead>
                        <tr>
                             <th scope="col"class>Stock</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td scope="row"></td>
                        </tr>
                    </tbody>
                    <thead>
                        <tr>
                             <th scope="col"class>Foto</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td scope="row"></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="form-group text-center">
            <button class="btn btn-success" style="width:170px " name="IngresarProducto">Agregar a carrito</button>
        </div>
    </form>
    @foreach(var banda in Model) {
    <h2>@banda.Nombre (@banda.Abreviacion)</h2>
    <img src="@banda.Foto" width="300" />
    <h3>Lista de albumes</h3>

    @foreach(var a in banda.Albumes) {
        <p>@a.Nombre</p>
    }
}
</div>